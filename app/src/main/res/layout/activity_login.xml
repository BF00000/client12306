<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginActivity">
    <com.wcy.client12306.ui.SuperEditTextView
        android:layout_width="293dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/colorfocus"
        android:layout_gravity="center"
        android:maxLength="25"
        android:singleLine="true"

        app:ic_left_click="@drawable/ic_left_click"
        app:ic_left_unclick="@drawable/ic_left_unclick"
        app:left_x="0"
        app:left_y="0"
        app:left_width="60"
        app:left_height="60"

        app:ic_delete="@drawable/delete"
        app:delete_x="0"
        app:delete_y="0"
        app:delete_width="60"
        app:delete_height="60"

        app:lineColor_click="@color/colorfocus"
        app:lineColor_unclick="@color/colorDeafult"
        app:linePosition="1"

        app:cursor="@drawable/cursortest"
        />

    <com.wcy.client12306.ui.SuperEditTextView
        android:layout_width="293dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:maxLength="25"
        android:singleLine="true"
        android:layout_gravity="center"
        android:inputType="textPassword"
        android:hint="@string/password"

        app:linePosition="1"
        app:ic_left_click="@drawable/password_click"
        app:ic_left_unclick="@drawable/password_unclick"
        />
    <ImageView
        android:id="@+id/code"
        android:layout_width="293dp"
        android:layout_height="190dp"
        android:layout_marginTop="30dp"
        android:background="@color/colorDeafult"
        android:layout_gravity="center"/>

    <!--<com.wcy.client12306.ui.GraphicsCodeView-->
        <!--android:background="@android:color/background_dark"-->
        <!--android:layout_width="250dp"-->
        <!--android:layout_height="300dp" />-->
</LinearLayout>