<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/buy_code"
            android:layout_width="0dp"
            android:layout_height="0dp" />
        <TextView
            android:id="@+id/train_id"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="G2855"/>
        <TextView
            android:id="@+id/start_arrival_station"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="贵阳东-->从江"/>
        <TextView
            android:id="@+id/start_arrival_time"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="17:05 - 18:45"/>
        <TextView
            android:id="@+id/through_time"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="1:50"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/list_view_line"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="8sp"
            android:textColor="@color/lineColor_unclick"
            android:text="商务座"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="8sp"
            android:textColor="@color/lineColor_unclick"
            android:text="一等座"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="8sp"
            android:textColor="@color/lineColor_unclick"
            android:text="二等座"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="8sp"
            android:textColor="@color/lineColor_unclick"
            android:text="高级软卧"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="8sp"
            android:textColor="@color/lineColor_unclick"
            android:text="软卧"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="8sp"
            android:textColor="@color/lineColor_unclick"
            android:text="动卧"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="8sp"
            android:textColor="@color/lineColor_unclick"
            android:text="硬卧"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="8sp"
            android:textColor="@color/lineColor_unclick"
            android:text="软座"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="8sp"
            android:textColor="@color/lineColor_unclick"
            android:text="硬座"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="8sp"
            android:textColor="@color/lineColor_unclick"
            android:text="无座"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="8sp"
            android:textColor="@color/lineColor_unclick"
            android:text="其他"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/specialSeat"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="有"/>
        <TextView
            android:id="@+id/levelOneSeat"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="有"/>
        <TextView
            android:id="@+id/levelTwoSeat"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="有"/>
        <TextView
            android:id="@+id/seniorSoft"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="有"/>
        <TextView
            android:id="@+id/levelOneSoft"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="有"/>
        <TextView
            android:id="@+id/bulletSoft"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="有"/>
        <TextView
            android:id="@+id/hardsLeeper"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="有"/>
        <TextView
            android:id="@+id/softSeat"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="有"/>
        <TextView
            android:id="@+id/hardSeat"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="有"/>
        <TextView
            android:id="@+id/noSeat"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="有"/>
        <TextView
            android:id="@+id/other"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="有"/>
    </LinearLayout>

</LinearLayout>
